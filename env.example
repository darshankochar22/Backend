# Server Configuration
PORT=5002
NODE_ENV=development

# Database Configuration - MongoDB Atlas
# Replace <username>, <password>, and <cluster-url> with your actual MongoDB Atlas credentials
MONGO_URL=mongodb+srv://<username>:<password>@<cluster-url>/hexagon?retryWrites=true&w=majority

# Example format:
# MONGO_URL=mongodb+srv://myuser:mypassword@cluster0.abc123.mongodb.net/hexagon?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d
SESSION_SECRET=your-super-secret-session-key-here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# URL Configuration
BACKEND_BASE_URL=http://localhost:5003
FRONTEND_URL=http://localhost:5173

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document
